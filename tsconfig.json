{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "es2017", "dom"],
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "paths" : {
            "services" : [
                "./services"
            ],
            "containers": [
                "./container"
            ],
            "reducers" : [
                "./reducers"
            ],
            "components" : [
                "./components"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}